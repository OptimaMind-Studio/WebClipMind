{
  "name": "Clip Mind",
  "description": "Save and organize text clips from web pages",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "add-clip": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Add selected text to Clip Mind"
    }
  }
}